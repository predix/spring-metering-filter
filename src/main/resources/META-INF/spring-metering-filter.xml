<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd">

    <bean id="meteringFilter" class="com.ge.predix.metering.filter.MeteringFilter"/>

    <bean id="customerResolver" class="com.ge.predix.metering.customer.ZoneBasedCustomerResolver"/>

    <bean id="nuregoClient"
        class="com.ge.predix.metering.nurego.AsyncNuregoClient">
        <constructor-arg name="url" value="${NUREGO_API_URL}" />
        <constructor-arg name="batchIntervalSeconds" value="${NUREGO_BATCH_INTERVAL_SECONDS:3600}" />
        <constructor-arg name="batchMaxMapSize" value="${NUREGO_BATCH_MAX_MAP_SIZE:1024}" />
        <constructor-arg name="nuregoUsername" value="${NUREGO_USERNAME:nuregoUsername}" />
        <constructor-arg name="nuregoPassword" value="${NUREGO_PASSWORD:nuregoPassword}" />
        <constructor-arg name="nuregoInstanceId" value="${NUREGO_INSTANCE_ID:nuregoInstanceId}" />
    </bean>

    <bean id="meteringRepo"
        class="com.ge.predix.metering.data.repository.DefaultMeteredResourceRepository" />

    <bean id="asyncRestTemplate"
        class="org.springframework.web.client.AsyncRestTemplate">
        <property name="asyncRequestFactory" ref="asyncRequestFactory" />
    </bean>

    <bean id="restTemplate"
          class="org.springframework.web.client.RestTemplate">
        <property name="requestFactory" ref="httpRequestFactory"/>
    </bean>

    <!-- Begin constructing Apache HttpAsyncClient request factory for ASYNC REST template. -->

    <bean id="asyncRequestFactory"
        class="org.springframework.http.client.HttpComponentsAsyncClientHttpRequestFactory">
        <constructor-arg ref="asyncHttpClient" />
    </bean>

    <bean id="asyncHttpClient" factory-bean="asyncSystemHttpClientBuilder"
        factory-method="build">
    </bean>

    <bean id="asyncSystemHttpClientBuilder" factory-bean="asyncHttpClientBuilder"
        factory-method="useSystemProperties">
        <property name="connectionManager" ref="asyncConnectionManager" />
    </bean>

    <bean id="asyncConnectionManager" class="org.apache.http.impl.nio.conn.PoolingNHttpClientConnectionManager">
        <constructor-arg ref="connectingIoReactor" />
        <property name="maxTotal" value="${httpAsyncClient.maxTotal:64}" />
    </bean>

    <bean id="connectingIoReactor" class="org.apache.http.impl.nio.reactor.DefaultConnectingIOReactor" />

    <bean id="asyncHttpClientBuilder" class="org.apache.http.impl.nio.client.HttpAsyncClientBuilder"
        factory-method="create">
    </bean>

    <!-- End constructing Apache HttpAsyncClient request factory for ASYNC REST template. -->

    <!-- Begin constructing Apache HttpClient request factory for REST template. -->

    <bean id="httpRequestFactory"
          class="org.springframework.http.client.HttpComponentsClientHttpRequestFactory">
        <constructor-arg ref="httpClient" />
    </bean>

    <bean id="httpClient" factory-bean="systemHttpClientBuilder" factory-method="build"/>

    <bean id="systemHttpClientBuilder" factory-bean="httpClientBuilder" factory-method="useSystemProperties">
        <property name="connectionManager" ref="connectionManager" />
    </bean>

    <bean id="connectionManager" class="org.apache.http.impl.conn.PoolingHttpClientConnectionManager">
        <property name="maxTotal" value="64" />
    </bean>

    <bean id="httpClientBuilder" class="org.apache.http.impl.client.HttpClientBuilder"
          factory-method="create">
    </bean>

    <!-- End constructing Apache HttpClient request factory for REST template. -->

</beans>
